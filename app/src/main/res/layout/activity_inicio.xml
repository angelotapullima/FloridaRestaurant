<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MVVM.Views.Home.Activitys.Inicio">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/up"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:layout_marginTop="-5dp"
        android:background="@drawable/up"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtBien"
        android:textSize="30sp"
        android:text="Bienvenidos"
        android:layout_marginLeft="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFlorida"
        android:textSize="40sp"
        android:textColor="@color/colorPrimary"
        android:text="Restaurant Florida"
        android:layout_marginLeft="16dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/medio"
        android:layout_marginTop="35dp"
        android:layout_below="@id/txtFlorida"
        android:background="@drawable/medio"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="70dp"
        android:background="#3B5999"
        android:layout_marginTop="80dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/facebook" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Ingresar con Facebook"
            android:layout_marginLeft="10dp"
            android:background="#3B5999"
            android:textColor="#FFF">


        </TextView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:paddingLeft="70dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/email" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Ingresar con Email"
            android:layout_marginLeft="15dp"
            android:background="@color/colorPrimary"
            android:textColor="#FFF">


        </TextView>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="25sp"
            android:id="@+id/continuar"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:text="Continuar"/>
    </RelativeLayout>


</LinearLayout>
