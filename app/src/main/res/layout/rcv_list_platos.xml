<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="20"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:id="@+id/plato_foto"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:background="#000"/>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="11"
            android:layout_height="wrap_content">

            <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:id="@+id/plato_nombre"
            android:textSize="12sp"
            android:maxLines="1" android:padding="3dp"
            android:text="Nombre"
            android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plato_descripcion"
                android:text="Angelo Tapullima Del Aguila" />

            <TextView
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plato_precio"
                android:text="Angelo Tapullima Del Aguila" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/plato_disponibilidad"
                    android:layout_marginRight="5dp"
                    android:textColor="#00A0C1"
                    android:text="3 " />
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#00A0C1"
                    android:text="platos disponibles" />
            </LinearLayout>






        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FF5757"
                android:id="@+id/plato_add"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:background="@drawable/borde_botom_add"
                android:text="Add"/>


        </LinearLayout>



    </LinearLayout>



</android.support.v7.widget.CardView>